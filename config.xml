<?xml version='1.0' encoding='utf-8'?>
<widget id="roadkill.tw" version="0.4.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Roadkill</name>
    <description>
        Roadkill report powered by Phonegap.
    </description>
    <author email="fbroadkill@gmail.com" href="http://roadkill.tw">
        TaiRON and IIS Sinica
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="orientation" value="portrait" />
    <icon src="res/android/xhdpi.png" />
    <platform name="android">
        <icon src="res/android/mdpi.png" density="mdpi" />
        <icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" />
        <icon src="res/android/xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <preference name="AndroidExtraFilesystems" value="sdcard,cache" />
</widget>
